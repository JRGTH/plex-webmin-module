plex_path=/usr/local/share/plexmediaserver/Plex Media Server
plex_config=/usr/local/etc/rc.d/plexmediaserver
version_cmd=pkg info | grep plexmediaserver | egrep -o "([0-9]{1,}\.)+[0-9]{1,}" 
pid_file=/var/run/plex/plex.pid
start_cmd=/usr/local/etc/rc.d/plexmediaserver onestart
restart_cmd=/usr/local/etc/rc.d/plexmediaserver onerestart
status_cmd=pgrep "Plex Media Server"
status_dlna=pgrep "Plex DLNA"
stop_cmd=/usr/local/etc/rc.d/plexmediaserver onestop
